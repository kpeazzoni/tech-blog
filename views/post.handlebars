<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
  <p>
    <button class="btn btn-primary">Create Blog!</button>
  </p>
</div>
{{#if comments.length}}
<h2>COMMENTS:</h2>
{{#each comments as |comment|}}
<div class="comment">
   <section class="comment">
    <div class="meta">
     {{comment.user.username}} created on {{format_date comment.createdAt}}
    </div>
    <div class="text">
      {{comment}}
    </div>
  </section>
</div>
{{/each}}
{{/if}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a comment:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>